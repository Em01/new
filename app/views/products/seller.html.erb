<table class="table table-striped table-bordered">
  <tr>
    <tr>Image</tr>
    <tr>Name</tr>
    <tr>Description</tr>
    <tr>Price</tr>
    <tr>Actions</tr>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.image.url(:thumb) %></td>
      <td><%= product.title %></td>
      <td><%= product.description %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td>
        <%= link_to "View", product, class: "btn btn-link" %>
        <%= link_to "Edit", edit_product_path(product), class: "btn btn-link" %>
        <%= link_to "Destroy", product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %>
      </td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Product', new_product_path, class: "btn btn-link" %>
<% end %>