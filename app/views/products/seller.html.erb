<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image.url(:medium) %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <p><%= "Sold by #{product.user.name}" %></p>
        <td><%= link_to 'Show', product, class: "btn btn-link" %></td>
        <% if (user_signed_in?) && (current_user = product.user) %>
          <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Product', new_product_path, class: "btn btn-link" %>
<% end %>