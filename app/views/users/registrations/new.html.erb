<div class="clear30"></div>
<div class="row">
  <div class="larger-12 columns"><h4 class="bold">We just need a couple details, not much we promise!</h4></div>
  <div class="clear40"></div>
  <div class="large-6 columns">
    <!-- ADD TWEET FEED -->
    <a href="javascript:history.back()"><p class="small"><i class="fa fa-angle-left"></i> Back to products</p></a>
  </div>

  <div class="large-6 columns">
    <h4 class="bold">Enter your details</h4>
    <p>We don’t share you’re details with anyone we promise!</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group rounded">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group rounded">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group rounded">
        <%= f.label :password %> 
        <% if @validatable %><i class="small">(<%= @minimum_password_length %> characters minimum)</i><% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group rounded">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group rounded right">
        <%= f.submit "Next", class: "rounded button" %>
      </div>
    <% end %>

   <!--  <%= render "devise/shared/links" %> -->
  </div>
</div>

<div class="clear30"></div>