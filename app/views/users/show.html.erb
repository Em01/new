      <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
      <div class="col-sm-6">
        <%= f.file_field :avatar %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
